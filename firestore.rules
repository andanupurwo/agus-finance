rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Check if user is superadmin
    function isSuperAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Check if user is admin or superadmin
    function isAdmin() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return userRole == 'admin' || userRole == 'superadmin';
    }
    
    // Check if user owns this resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - Auth required
    match /users/{userId} {
      // Any authenticated user can read their own profile
      allow read: if request.auth.uid == userId;
      // Superadmin can read all users
      allow read: if isSuperAdmin();
      // Users can write their own profile
      allow write: if request.auth.uid == userId;
      // Only superadmin can modify user roles or delete users
      allow write: if isSuperAdmin();
    }
    
    // Wallets collection - User-specific access
    match /wallets/{walletId} {
      allow read, write: if request.auth != null && isOwner(resource.data.userId);
      allow create: if request.auth != null && isOwner(request.resource.data.userId);
    }
    
    // Budgets collection - User-specific access
    match /budgets/{budgetId} {
      allow read, write: if request.auth != null && isOwner(resource.data.userId);
      allow create: if request.auth != null && isOwner(request.resource.data.userId);
    }
    
    // Transactions collection - User-specific access
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null && isOwner(resource.data.userId);
      allow create: if request.auth != null && isOwner(request.resource.data.userId);
    }
  }
}
