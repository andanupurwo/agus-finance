rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WHITELIST: Hanya email ini yang bisa akses aplikasi
    function isAuthorized() {
      return request.auth != null && 
             request.auth.token.email in [
               'andanupurwo@gmail.com',      // Anda
               'ashrinurhida@gmail.com'      // Istri Anda
               // Tambahkan email lain di sini jika perlu
             ];
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isAuthorized();
    }

    // Families collection
    match /families/{familyId} {
      allow read, write, delete: if isAuthorized();
    }

    // Wallets
    match /wallets/{walletId} {
      allow read, create, write, delete: if isAuthorized();
    }

    // Budgets
    match /budgets/{budgetId} {
      allow read, create, write, delete: if isAuthorized();
    }

    // Transactions
    match /transactions/{transactionId} {
      allow read, create, write, delete: if isAuthorized();
    }
  }
}
